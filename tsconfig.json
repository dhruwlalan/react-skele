{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "noEmit": true,
    "noEmitOnError": true,
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
